{
  "name": "satdash-client",
  "scripts": {
    "test": "jest",
    "check-typescript-types": "tsc --noEmit --skipLibCheck",
    "build-prod": "webpack --mode production",
    "build-dev": "webpack --mode development",
    "lint": "eslint 'src/**/*.ts' 'src/**/*.tsx'"
  },
  "license": "ISC",
  "dependencies": {
    "@devexpress/dx-react-chart": "3.0.6",
    "@devexpress/dx-react-chart-material-ui": "3.0.6",
    "@emotion/react": "11.10.4",
    "@emotion/styled": "11.10.4",
    "@mui/icons-material": "5.10.9",
    "@mui/material": "5.10.10",
    "@mui/styles": "5.10.10",
    "axios": "0.24.0",
    "d3-scale": "4.0.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-minimal-pie-chart": "8.3.0"
  },
  "devDependencies": {
    "@types/d3-scale": "4.0.2",
    "@types/jest": "29.2.0",
    "@types/react-dom": "18.0.6",
    "@typescript-eslint/eslint-plugin": "5.41.0",
    "eslint": "8.26.0",
    "eslint-plugin-prettier": "4.2.1",
    "fork-ts-checker-webpack-plugin": "6.4.0",
    "jest": "29.2.1",
    "ts-jest": "29.0.3",
    "ts-loader": "9.4.1",
    "typescript": "4.8.4",
    "webpack": "5.74.0",
    "webpack-cli": "4.10.0"
  },
  "eslintConfig": {
    "env": {
      "jest": true,
      "browser": true
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "parserOptions": {
      "sourceType": "module"
    },
    "extends": "eslint:recommended",
    "rules": {
      "comma-dangle": "error",
      "complexity": ["error", 10],
      "max-len": "error",
      "new-parens": "error",
      "no-console": "error",
      "no-multiple-empty-lines": "error",
      "no-tabs": "error",
      "no-trailing-spaces": "error",
      "no-unused-vars": ["error", {
        "varsIgnorePattern": "^_"
      }],
      "no-whitespace-before-property": "error",
      "quotes": ["error", "single"],
      "semi": "error",
      "semi-style": "error",
      "sort-imports": "error",
      "strict": "error"
    }
  }
}
