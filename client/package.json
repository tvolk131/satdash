{
  "name": "satdash-client",
  "scripts": {
    "test": "jest",
    "check-typescript-types": "tsc --noEmit --skipLibCheck",
    "build-prod": "webpack --mode production",
    "build-dev": "webpack --mode development",
    "lint": "eslint 'src/**/*.ts' 'src/**/*.tsx'"
  },
  "license": "ISC",
  "dependencies": {
    "@devexpress/dx-react-chart": "^3.0.6",
    "@devexpress/dx-react-chart-material-ui": "^3.0.6",
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.11.16",
    "@mui/material": "^5.13.0",
    "@mui/styles": "^5.12.3",
    "axios": "^0.24.0",
    "d3-scale": "^4.0.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-minimal-pie-chart": "^8.4.0",
    "react-wavify": "^1.8.0",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@types/d3-scale": "^4.0.3",
    "@types/jest": "^29.5.1",
    "@types/react-dom": "^18.2.4",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "eslint": "^8.40.0",
    "eslint-plugin-prettier": "^4.2.1",
    "fork-ts-checker-webpack-plugin": "^6.4.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.4",
    "webpack": "^5.82.1",
    "webpack-cli": "^4.10.0"
  },
  "eslintConfig": {
    "env": {
      "jest": true,
      "browser": true
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "parserOptions": {
      "sourceType": "module"
    },
    "extends": "eslint:recommended",
    "rules": {
      "comma-dangle": "error",
      "complexity": [
        "error",
        10
      ],
      "max-len": "error",
      "new-parens": "error",
      "no-console": "error",
      "no-multiple-empty-lines": "error",
      "no-tabs": "error",
      "no-trailing-spaces": "error",
      "no-unused-vars": [
        "error",
        {
          "varsIgnorePattern": "^_"
        }
      ],
      "no-whitespace-before-property": "error",
      "quotes": [
        "error",
        "single"
      ],
      "semi": "error",
      "semi-style": "error",
      "sort-imports": "error",
      "strict": "error"
    }
  }
}
